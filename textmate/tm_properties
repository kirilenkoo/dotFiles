# Settings
fontName             = "Monaco"
fontSize             = 15
softTabs             = true
tabSize              = 2
lineEndings = '\n'
showInvisibles = true
projectDirectory     = "$CWD"
windowTitle          = "$TM_DIRECTORY/$TM_DISPLAYNAME - ${CWD/^.*\///}"
TM_ORGANIZATION_NAME = 'Entropy-Lab'

# Variables
TM_GIT           = "/usr/local/bin/git"
TM_RUBY          = "$HOME/.rvm/bin/rvm-auto-ruby" #for rvm swithing rubies

[ .git/COMMIT_EDITMSG ]
softWrap         = true
spellChecking    = true
spellingLanguage = 'en'

[ text ]
spellChecking    = true
softWrap         = false
wrapColumn       = "Use Window Frame"
softTabs         = true
tabSize          = 2

[ text.plain ]
spellChecking    = true
softWrap         = true
wrapColumn       = "Use Window Frame"
softTabs         = false
tabSize          = 4

[ text.html.markdown ]
spellChecking    = true
softWrap         = true
wrapColumn       = "Use Window Frame"
softTabs         = false
tabSize          = 4

[ source ]
softWrap         = true
wrapColumn       = "Use Window Frame"
softTabs         = true
tabSize          = 2

[ source.plist ]
softTabs       = false
tabSize        = 4

[ source.tm-properties ]
spellChecking  = false

[ "{Capfile,Gemfile,Gemfile.lock,Guardfile}" ]
